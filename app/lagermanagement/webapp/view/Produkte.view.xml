<mvc:View id="Produkte"
    controllerName="at.clouddna.lagermanagement.controller.Produkte" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m"
    class="viewPadding">
    <Page id="page" title="Produkte">
        <content>
        <HBox>
        <Table id="produkte_table" headerText="Produkte" items="{path:'/Produkte'}">
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle1" text="Produkte" />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button icon="sap-icon://download" press="toExcel" />
                        <Button text="neuen Eintrag erstellen" type="Accept" press="onCreatePressed" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Produktname" />
                    </Column>
                    <Column>
                        <Text text="Produktbeschreibung" />
                    </Column>
                    <Column>
                        <Text text="Preis" />
                    </Column>
                    <Column>
                        <Text text="Mindestbestand" />
                    </Column>
                    <Column>
                        <Text text="Mengeok" />
                    </Column>
                    <Column>
                        <Text text="Mengewarnung" />
                    </Column>
                    <Column>
                        <Text text="Lieferanten" />
                    </Column>
                    <Column>
                        <Text text="Button" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="listEntries" type="Navigation" press="onListItemPressed">
                        <cells>     
                            <Text text="{name}" />
                            <Text text="{beschreibung}" />
                            <Text text="{preis}" />
                            <Text text="{mindestbestand}" />
                            <Text text="{mengeok}" />
                            <Text text="{mengewarnung}" />
                            <Text text="{lieferant/name}" />
                            <HBox>
                            <Button id="deleteButton" icon="sap-icon://delete" type="Reject" press="onDeleteButtonPressed"/>
                            </HBox>
                            </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </HBox>
        </content>
    </Page>
</mvc:View>
