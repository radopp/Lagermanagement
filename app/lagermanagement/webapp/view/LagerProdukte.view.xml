<mvc:View id="Lager Produkte"
    controllerName="at.clouddna.lagermanagement.controller.LagerProdukte" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m"
    class="viewPadding">
    <Page id="page" title="Lager Produkte">
        <content>
        <HBox>
        <Table id="produkte_table" headerText="Lager Produkte" items="{path:'/Lagerbestand'}">
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle1" text="Lager Produkte" />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button icon="sap-icon://download" press="toExcel" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Lager Name" />
                    </Column>
                    <Column>
                        <Text text="Lager Ort" />
                    </Column>
                    <Column>
                        <Text text="Produkt" />
                    </Column>
                    <Column>
                        <Text text="Anzahl" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="listEntries" type="Navigation" press="onListItemPressed">
                        <cells>
                             <Text text="{lager/name}" /> 
                            <Text text="{lager/ort}" />    
                            <Text text="{produkt/name}" />
                            <Text text="{menge}" />
                            </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </HBox>
        </content>
    </Page>
</mvc:View>
