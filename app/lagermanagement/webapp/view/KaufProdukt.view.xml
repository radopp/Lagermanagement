<mvc:View id="Bestellung"
    controllerName="at.clouddna.lagermanagement.controller.KaufProdukt" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m"
    class="viewPadding">
    <f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Produkt und Anzahl auswÃ¤hlen"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
                <Label text="Produkt" labelFor="edit_input_produkte" />
				    <ActionSelect
					    name="Produkt/e"
                        forceSelection="false"
					    items="{
						    path: '/Produkte',
						    templateShareable: true}">
					    <core:Item text="{name}" key="{ID}" />
				    </ActionSelect>
                    <Label text="Anzahl" labelFor="edit_input_anzahl" />
                    <StepInput value="{anzahl}" placeholder="Anzahl" width="100%" change="handleChange"/>
			</f:content>
		</f:SimpleForm>
        <Bar>
                <contentRight>
                    <Button id="warenkorb" text="In den Warenkorb" type="Transparent"
                        icon="sap-icon://add" press="onSavePressed" visible="{editModel>/editmode}"/>
                </contentRight>
            </Bar>
        
</mvc:View>