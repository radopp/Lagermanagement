<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <VBox>
        <f:SimpleForm
            id="SimpleFormChange354"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Bestellung erstellen"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsXL="1"
            columnsL="1"
            columnsM="1"
            singleContainerFullSize="false">
            <f:content>
                <Label text="Bestelldatum" labelFor="edit_input_bestelldatum" />
                <DatePicker id="bestelldatum" value="{bestellung/bestelldatum}" placeholder="Bestelldatum eingeben" change="handleChange" class="sapUiSmallMarginBottom" />
                <Label text="Lieferdatum" labelFor="edit_input_lieferdatum" />
                <DatePicker id="lieferdatum" value="{bestellung/lieferdatum}" placeholder="Lieferdatum eingeben" change="handleChange" class="sapUiSmallMarginBottom" />
            </f:content>
        </f:SimpleForm>
        <List mode="Delete" delete="onDeleteButtonPressed" headerText="Custom Content" items="{path: 'bestellungModel>/produkte'}">
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="Produkte" />
                    <ToolbarSpacer />
                    <Button id="new" type="Transparent" icon="sap-icon://add" press="onNewPressed" visible="{editModel>/editmode}" />
                </OverflowToolbar>
            </headerToolbar>
            <CustomListItem>
                <HBox>
                    <VBox class="sapUiSmallMargin">
                        <Label text="Produkt" />
                        <Select items="{/Produkte}">
                          <core:Item key="{ID}" text="{name}"/>
                        </Select>
                    </VBox>
                    <VBox class="sapUiSmallMargin">
                      <Label text="Anzahl"/>
                      <StepInput value="{anzahl}"/>
                    </VBox >
                </HBox>
            </CustomListItem>
        </List>
    </VBox>
</core:FragmentDefinition>
