<mvc:View
    controllerName="at.clouddna.lagermanagement.controller.Bestellung"
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <TreeTable
        id="treeTable"
        selectionMode="Single"
        enableColumnReordering="false"
        rows="{
            path : '/Bestellposition',
            parameters : {
                countMode: 'Inline',
                treeAnnotationProperties : {
                    hierarchyLevelFor : 'Produkte',
                    hierarchyNodeFor : 'Bestelldatum',
                    hierarchyParentNodeFor : 'Lieferdatum',
                    hierarchyDrillStateFor : 'Anzahl'
                }
            }
        }">

        <columns>

            <Column label="Produkte">
                <template>
                    <m:Text text="{produkt/name}" wrapping="false" />
                </template>
            </Column>

            <Column label="Bestelldatum">
                <template>
                    <m:Text text="{bestellung/bestelldatum}" wrapping="false" />
                </template>
            </Column>

            <Column label="Lieferdatum">
                <template>
                    <m:Text text="{bestellung/lieferdatum}" wrapping="false" />
                </template>
            </Column>

            <Column label="Anzahl">
                <template>
                    <m:Text text="{anzahl}" wrapping="false" />
                </template>
            </Column>

        </columns>

    </TreeTable>

</mvc:View>