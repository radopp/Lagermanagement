<mvc:View
        controllerName="at.clouddna.lagermanagement.controller.Bestellung"
        xmlns="sap.ui.table"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:m="sap.m"
        xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core"
        height="100%">
    <m:Page
            showHeader="false"
            enableScrolling="false">
        <m:content>
            <TreeTable
                    selectionMode="None"
                    id="TreeTableBasic"
                    rows="{path:'bestellModel>/', parameters:{arrayNames:['positionen']}}"
                    enableSelectAll="false"
                    ariaLabelledBy="title">
                <extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="bestellungen" text="Bestellungen"/>
                        <m:ToolbarSpacer/>
                        <m:Button text="neuen Eintrag erstellen" type="Accept" press="onCreatePressed" />
                    </m:OverflowToolbar>
                </extension>
                <columns>
                    <Column>
                        <m:Label text="ID"/>
                        <template>
                            <m:Text text="{path:'bestellModel>', formatter:'.getIdforPosition'}"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Produkt/e"/>
                        <template>
                            <m:Text text="{bestellModel>produkt/name}"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Anzahl"/>
                        <template>
                            <m:Text text="{bestellModel>anzahl}"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Bestelldatum"/>
                        <template>
                            <m:Text text="{path:'bestellModel>bestelldatum', type:'sap.ui.model.type.Date', formatOptions: {
					                    style: 'long',
					                    source: {
						                pattern: 'yyyy-MM-dd\'T\'HH:mm:ssZ'}
				                        }}"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Lieferdatum"/>
                        <template>
                            <m:Text text="{path:'bestellModel>lieferdatum', type:'sap.ui.model.type.Date', formatOptions: {
					                    style: 'long',
					                    source: {
						                pattern: 'yyyy-MM-dd\'T\'HH:mm:ssZ'}
				                        }}"/>
                        </template>
                    </Column>
                    <Column>
                        <m:Label text="Bestellung lÃ¶schen"/>
                        <template>
                            <m:Button id="deleteButton" icon="sap-icon://delete" type="Reject" press="onDeleteButtonPressed"/>
                        </template>
                    </Column>
                </columns>
            </TreeTable>
        </m:content>
    </m:Page>
</mvc:View>
