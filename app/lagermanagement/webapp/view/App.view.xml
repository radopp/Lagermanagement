<mvc:View controllerName="at.clouddna.lagermanagement.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <SplitApp id="pages">
        <detailPages />
        <masterPages>
            <Page id="menu" title="{i18n>title.Menu}" backgroundDesign="List">
                <List itemPress="_onListItemPressed">
                    <items>
                        <StandardListItem id="produkte_ID" title="{i18n>menu.Produkte}" type="Active" />
                        <StandardListItem id="lieferant_ID" title="{i18n>menu.Lieferant}" type="Active" />
                        <StandardListItem id="lagerorte_ID" title="{i18n>menu.Lagerorte}" type="Active" />
                        <StandardListItem id="bestellungen_ID" title="{i18n>menu.Bestellungen}" type="Active" />
                    </items>
                </List>
            </Page>
        </masterPages>
    </SplitApp>
</mvc:View>
